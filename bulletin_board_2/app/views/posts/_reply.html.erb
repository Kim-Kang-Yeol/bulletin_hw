<h2>Replies</h2>
<% @post.replies.each do |reply| %>
  <%= reply[:id] %>
  <p>
    <strong>User:</strong>
    <%= reply.reply_user %>
  </p>

  <p>
    <strong>Reply:</strong>
    <%= reply.body %>
  </p>

  <hr width='100%' color='gray' noshade />
<% end %>

<h2>Reply:</h2>
<%= form_for([@post, @post.replies.build]) do |f| %>
  <p>
    <%= f.label :reply_user %><br>
    <%= f.text_field :reply_user %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
